<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddPlayerActivity">

    <android.support.design.widget.TextInputLayout
        android:layout_width="309sp"
        android:layout_height="53sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="90sp"
        app:errorEnabled="true">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/player1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="Player 1"
        />


    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="309sp"

        android:layout_height="53sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="140sp">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/player2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:autofillHints=""
            android:cursorVisible="false"
            android:focusable="false"
            />

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="309sp"

        android:layout_height="53sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="190sp">

        <android.support.design.widget.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/player3"
            android:autofillHints=""
            android:cursorVisible="false"
            android:focusable="false"/>

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="309sp"
        android:layout_height="53sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="240sp">

        <android.support.design.widget.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/player4"
            android:autofillHints=""
            />

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="309sp"

        android:layout_height="53sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="290sp">

        <android.support.design.widget.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/player5"
            android:autofillHints=""
            android:cursorVisible="false"
            android:focusable="false"/>

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="309sp"
        android:layout_height="53sp"
        android:layout_marginTop="340sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        >


        <android.support.design.widget.TextInputEditText
            android:id="@+id/player6"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:autofillHints=""
            android:cursorVisible="false"
            android:focusable="false"/>

    </android.support.design.widget.TextInputLayout>


    <android.support.design.widget.TextInputLayout
        android:layout_width="309sp"

        android:layout_height="53sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="390sp">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/player7"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:baselineAligned="true"
            android:autofillHints=""
            android:cursorVisible="false"
            android:focusable="false"/>

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="309sp"

        android:layout_height="53sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="440sp">

        <android.support.design.widget.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/player8"
            android:autofillHints=""
            android:cursorVisible="false"
            android:focusable="false"/>

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="309sp"

        android:layout_height="53sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="490sp">

        <android.support.design.widget.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/player9"
            android:hint=""
            android:cursorVisible="false"
            android:focusable="false"/>

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="309sp"

        android:layout_height="53sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="540sp">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/player10"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:autofillHints=""
            android:cursorVisible="false"
            android:focusable="false" />


    </android.support.design.widget.TextInputLayout>

    <ImageButton
        android:id="@+id/submitButton"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="23dp"
        android:layout_marginRight="23dp"
        android:layout_marginTop="22dp"
        android:background="#499273"
        android:onClick="namesSubmitClick"
        android:rotation="-90"
        app:srcCompat="@android:drawable/arrow_down_float" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="Add Players"
        android:textColor="#000000"
        android:layout_marginTop="15dp"
        android:textSize="40sp" />


</RelativeLayout>